<div class="loggin_form">
	<% if flash[:alert] %>
		<aside class="notice"><%= flash[:alert] %></aside>
	<% end %>

	<%= form_tag do%>
		<h1>Log in</h1>
		<div class="field">
			<%= label_tag :email, 'Email:' %>
			<%= email_field_tag :email, params[:email] %>
		</div>
		<div class="field">
			<%= label_tag :password, 'Password:' %>
			<%= password_field_tag :password, params[:password] %>
		</div>

		<div class="actions">
			<%= submit_tag "Login" %>
		</div>
	<% end %>
</div>
