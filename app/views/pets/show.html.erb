<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @pet.description %>
</p>

<p>
  <strong>Type:</strong>
  <%= @pet.animal_type %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Owner:</strong>
  <%= link_to @pet.user.name, @pet.user %>
</p>

<p>
  <% if @pet.has_parent? %>
    <strong>Parent: </strong>
    <%= link_to @pet.parent.name, @pet.parent %>
  <% end %>
</p>

<div class="pet_photos">
  <% @pet.photos.each do |photo| %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag(photo.pet_image) %> </td>
        </tr>
        <tr>
          <td>Title: <%= photo.title %></td>  
        </tr>
        <tr>
          <td>Description: <%= photo.description %></td> 
          <% if @pet.owned_by(@user) %>
            <td><%= link_to 'Delete photo', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    
  <% end %>
</div>

<% if @pet.owned_by(@user) %>
  <%= link_to 'Edit', edit_pet_path(@pet) %> |
  <%= link_to 'Add photo', new_photo_path %> |
<% end%>

<%= link_to 'Back', @user %>
