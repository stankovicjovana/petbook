<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @pet.description %>
</p>

<p>
  <strong>Type:</strong>
  <%= @pet.animal_type %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Owner:</strong>
  <%= link_to @pet.user.name, @pet.user %>
</p>

<div class="pet_photos">
  <% (0...@pet.photos.count).each do |image_index| %>
    <%= image_tag(@pet.photos[image_index].pet_image) %>
  <% end %>
</div>

<% if @pet.owned_by(@user) %>
  <%= link_to 'Edit', edit_pet_path(@pet) %> |
  <%= link_to 'Add photo', new_photo_path %> |
<% end%>

<%= link_to 'Back', pets_path %>
